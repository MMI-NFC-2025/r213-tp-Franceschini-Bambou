---
import { getOffre } from '../../js/backend.mjs';
import Layout  from '../../layouts/Layout.astro';

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre?.nom_maison}>
    <h2>{offre?.nom_maison}</offre>
    <ul>
        <li>{offre?.adresse}</li>
        <li> {offre?.nbChambres}</li>
        <li> {offre?.nbSalle_de_bains}</li>
        <li> {offre?.surface}</li>
        <li> {offre?.prix}</li>
    </ul>
</Layout>


