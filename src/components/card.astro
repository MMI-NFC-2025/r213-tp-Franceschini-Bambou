---
const { offre } = Astro.props;
import PbImage from "./PbImage.astro";
---

<div class="card">
      <PbImage record={offre} recordImage={offre.images[0]} />

    <h2>{offre.nom_maison}</h2>
    <!-- <p>{offre.adresse}</p> -->

    <!-- <ul>
        <li>Chambres : {offre.nbChambres}</li>
        <li>Salles de bain : {offre.nbSdb}</li>
        <li>Surface : {offre.surface} m²</li>
        <li>Prix : {offre.prix} €</li>
    </ul> -->

    {offre.favori && <span class="favori">★ Favori</span>}
</div>

<style>
    .card {
        border: 1px solid oklch(66.7% 0.295 322.15);
        padding: 1rem;
        border-radius: 8px;
        max-width: 260px;
        justify-items: center;
    }
    img {
        width: 100%;
        border-radius: 6px;
    }
    .favori {
        color: gold;
        font-weight: bold;
    }
</style>

<a href={`/offres/${offre.id}`}>Voir plus</a>